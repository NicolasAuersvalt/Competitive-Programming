double ternary_search(double l, double r) {
    for (int i = 0; i < 200; i++) { // iterações suficientes para precisão
        double m1 = l + (r - l) / 3.0;
        double m2 = r - (r - l) / 3.0;

        if (f(m1) < f(m2))
            l = m1;   // máximo está à direita
        else
            r = m2;   // máximo está à esquerda
    }
    return (l + r) / 2.0;
}